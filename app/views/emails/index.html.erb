<div class="container">

<h1 class="display-4"> 🐝 E-miel : fly for a better world</h1>
<hr>
<p>The sweetest mailbox : fluid like honey 🍯</p>

<br>

  <div class="row">

    <table class="table col-5">
        <thead>
          <tr>
            <th scope="col">id</th>
            <th scope="col">object</th>
          </tr>
          </thead>
      <% @all_emails.each do |mail| %>
      <tbody class="thr">
            <th scope="row" id="<%= mail.id %>"><%= mail.id %></th>
            <td id="object_<%= mail.id %>"><%= link_to mail.object, email_path(mail.id), remote: true %></td>
        <% end %>
      </tbody>
    </table>

    <table class="table col-6 offset-1">
        <thead>
            <tr>
                <th scope="col">Email preview</th>
                <hr>
            </tr>
            </thead>
            <tbody>
                <tr>
                    <td id="email-content"></td>
            </tbody>
    </table>

  </div>
</div>
